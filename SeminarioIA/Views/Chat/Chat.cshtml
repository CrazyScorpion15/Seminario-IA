<link rel="stylesheet" href="~/css/Home.css"/>
<h1>💬 MindBuddy - Asistente Emocional</h1>

<form asp-action="EnviarMensaje" method="post">
    <div>
        <label for="Text">¿Cómo te sientes hoy?</label>
        <br />             
        <textarea style="margin-top: 10px" name="Text" id="Text" rows="4" cols="50" placeholder="Expresate libremente...">@Model?.Text</textarea>
    </div>
    <button type="submit" class="botones" style="padding: 5px 10px;">Enviar</button>
</form>

@if (Model?.Response != null)
{
    <div style="margin-top: 20px;">
        <h4>🤖 Respuesta de MindBuddy:</h4>
        <p><strong>Emoción detectada:</strong> @Model.Emotion</p>
        <p><strong>Mensaje:</strong> @Model.Response</p>
    </div>
}
